@model IEnumerable<EC_C2C_BanQuanAo.HoaDon_BanHang>
@{
    ViewBag.Title = "Cập nhật tình trạng đơn hàng";
    Layout = "~/Areas/NguoiBan/Views/Shared/_LayoutNguoiBan.cshtml";
}

<!-- Custom scripts for this page-->
<script src="~/Assets_NguoiBan/js/sb-admin-datatables.min.js"></script>

<h2>Cập nhật tình trạng đơn hàng</h2>
<br />

<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Data Table Example
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="abc" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.MaHDH)</th>
                        <th>@Html.DisplayNameFor(model => model.DuongSo)</th>
                        <th>@Html.DisplayNameFor(model => model.QuanHuyen)</th>
                        <th>@Html.DisplayNameFor(model => model.TinhThanh)</th>
                        <th>@Html.DisplayNameFor(model => model.SoLuong) date</th>
                        <th>@Html.DisplayNameFor(model => model.Ngay)</th>
                        <th>@Html.DisplayNameFor(model => model.TongTien)</th>
                        <th>@Html.DisplayNameFor(model => model.TrangThai)</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Position</th>
                        <th>Office</th>
                        <th>Age</th>
                        <th>Start date</th>
                        <th>Salary</th>
                    </tr>
                </tfoot>
                <tbody>
                    <tr>
                        <td>Brielle Williamson</td>
                        <td>Integration Specialist</td>
                        <td>New York</td>
                        <td>61</td>
                        <td>2012/12/02</td>
                        <td>$372,000</td>
                    </tr>
                    
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>

<script>
    $(document).ready(function () {
        $('#abc').DataTable({
            "language": {
                "decimal": "",
                "emptyTable": "Không có dữ liệu",
                "info": "Hiển thị từ _START_ - _END_ trong _TOTAL_ dòng dữ liệu",
                "infoEmpty": "Hiển thị 0 trong 0 dòng dữ liệu",
                "infoFiltered": "(Đã hiện hết _MAX_ dòng dữ liệu)",
                "infoPostFix": "",
                "thousands": ",",
                "lengthMenu": "Hiển thị _MENU_ dòng dữ liệu",
                "loadingRecords": "Đang tải...",
                "processing": "Đang trong quá trình...",
                "search": "Tìm kiếm:",
                "zeroRecords": "Không tìm thấy dữ liệu",
                "paginate": {
                    "first":      "Đầu tiên",
                    "last":       "Cuối cùng",
                    "next":       "Tiếp theo",
                    "previous":   "Trước đó"
                },
                "aria": {
                    "sortAscending":  ": Sắp xếp cột theo thứ tự tăng dần",
                    "sortDescending": ": Sắp xếp cột theo thứ tự giảm dần"
                }
            }
        });
    });
</script>

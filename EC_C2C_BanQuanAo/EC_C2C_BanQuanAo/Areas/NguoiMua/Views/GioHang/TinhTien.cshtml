<section id="cart_items">
    <div class="container">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li class="active">Check out</li>
            </ol>
        </div><!--/breadcrums-->

        <div class="review-payment">
            <h2>Review & Payment</h2>
        </div>

        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Item</td>
                        <td class="description"></td>
                        <td class="price">Price</td>
                        <td class="quantity">Quantity</td>
                        <td class="total">Total</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="cart_product">
                                <a href=""><img src="@Url.Content(@item.HinhAnh.DuongDan)" alt=""></a>
                            </td>
                            <td class="cart_description">
                                @Html.DisplayFor(modelItem => item.GioHang.Tin.TenSP)
                            </td>
                            <td class="cart_price">
                                <p>$@Html.DisplayFor(modelItem => item.GioHang.Gia)</p>
                            </td>
                            <td class="cart_quantity">
                                <div class="cart_quantity_button">
                                    <p>@Html.DisplayFor(modelItem => item.GioHang.SoLuong)</p>
                                </div>
                            </td>
                            <td class="cart_total">
                                <p class="cart_total_price">$@(item.GioHang.Gia * item.GioHang.SoLuong)</p>
                            </td>
                            <td class="cart_delete">
                                <a class="cart_quantity_delete" href=""><i class="fa fa-times"></i></a>
                            </td>
                        </tr>
                    }

                    <tr>
                        <td colspan="4">&nbsp;</td>
                        <td colspan="2">
                            <table class="table table-condensed total-result">
                                <tr>
                                    <td>Cart Sub Total</td>
                                    @{
                                        int sub_total = 0;
                                        foreach (var item in Model)
                                        {
                                            sub_total += item.GioHang.Gia * item.GioHang.SoLuong ?? 0;
                                        }
                                    }
                                    <td>$@sub_total</td>
                                </tr>
                                <tr>
                                    <td>Exo Tax</td>
                                    <td>$0</td>
                                </tr>
                                <tr class="shipping-cost">
                                    <td>Shipping Cost</td>
                                    <td>Free</td>
                                </tr>
                                <tr>
                                    <td>Total</td>
                                    <td><span>$@sub_total</span></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td><a class="btn btn-primary" href="@Url.Action("PaymentWithPaypal","GioHang")">Check out with Paypal</a></td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
</section> <!--/#cart_items-->



